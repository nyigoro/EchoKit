{
  "name": "echokyt",
  "version": "0.1.0",
  "description": "A lightweight text utility library",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "jsdelivr": "./dist/browser.min.js",
  "unpkg": "./dist/browser.min.js",
  "bin": {
    "echokyt": "./dist/cli/echokyt.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./echokyt": {
      "types": "./dist/echokyt.d.ts",
      "import": "./dist/echokyt.js",
      "require": "./dist/cjs/echokyt.cjs"
    },
    "./format": {
      "types": "./dist/format/index.d.ts",
      "import": "./dist/format/index.js",
      "require": "./dist/cjs/format/index.cjs"
    },
    "./format/*": {
      "types": "./dist/format/*.d.ts",
      "import": "./dist/format/*.js",
      "require": "./dist/cjs/format/*.cjs"
    },
    "./analyze": {
      "types": "./dist/analyze/index.d.ts",
      "import": "./dist/analyze/index.js",
      "require": "./dist/cjs/analyze/index.cjs"
    },
    "./analyze/*": {
      "types": "./dist/analyze/*.d.ts",
      "import": "./dist/analyze/*.js",
      "require": "./dist/cjs/analyze/*.cjs"
    },
    "./parse": {
      "types": "./dist/parse/index.d.ts",
      "import": "./dist/parse/index.js",
      "require": "./dist/cjs/parse/index.cjs"
    },
    "./parse/*": {
      "types": "./dist/parse/*.d.ts",
      "import": "./dist/parse/*.js",
      "require": "./dist/cjs/parse/*.cjs"
    },
    "./sanitize": {
      "types": "./dist/sanitize/index.d.ts",
      "import": "./dist/sanitize/index.js",
      "require": "./dist/cjs/sanitize/index.cjs"
    },
    "./sanitize/*": {
      "types": "./dist/sanitize/*.d.ts",
      "import": "./dist/sanitize/*.js",
      "require": "./dist/cjs/sanitize/*.cjs"
    },
    "./validate": {
      "types": "./dist/validate/index.d.ts",
      "import": "./dist/validate/index.js",
      "require": "./dist/cjs/validate/index.cjs"
    },
    "./validate/*": {
      "types": "./dist/validate/*.d.ts",
      "import": "./dist/validate/*.js",
      "require": "./dist/cjs/validate/*.cjs"
    },
    "./seo": {
      "types": "./dist/seo/index.d.ts",
      "import": "./dist/seo/index.js",
      "require": "./dist/cjs/seo/index.cjs"
    },
    "./seo/*": {
      "types": "./dist/seo/*.d.ts",
      "import": "./dist/seo/*.js",
      "require": "./dist/cjs/seo/*.cjs"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js",
      "require": "./dist/cjs/templates/index.cjs"
    },
    "./templates/*": {
      "types": "./dist/templates/*.d.ts",
      "import": "./dist/templates/*.js",
      "require": "./dist/cjs/templates/*.cjs"
    },
    "./browser": "./dist/browser.min.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "echokyt": [
        "dist/echokyt.d.ts"
      ],
      "format": [
        "dist/format/index.d.ts"
      ],
      "format/*": [
        "dist/format/*.d.ts"
      ],
      "analyze": [
        "dist/analyze/index.d.ts"
      ],
      "analyze/*": [
        "dist/analyze/*.d.ts"
      ],
      "parse": [
        "dist/parse/index.d.ts"
      ],
      "parse/*": [
        "dist/parse/*.d.ts"
      ],
      "sanitize": [
        "dist/sanitize/index.d.ts"
      ],
      "sanitize/*": [
        "dist/sanitize/*.d.ts"
      ],
      "validate": [
        "dist/validate/index.d.ts"
      ],
      "validate/*": [
        "dist/validate/*.d.ts"
      ],
      "seo": [
        "dist/seo/index.d.ts"
      ],
      "seo/*": [
        "dist/seo/*.d.ts"
      ],
      "templates": [
        "dist/templates/index.d.ts"
      ],
      "templates/*": [
        "dist/templates/*.d.ts"
      ],
      "*": [
        "dist/*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:browser",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && node scripts/rename-cjs.mjs",
    "build:browser": "esbuild src/browser.ts --bundle --platform=browser --format=iife --minify --outfile=dist/browser.min.js",
    "clean": "rimraf dist coverage && rimraf --glob \"*.tsbuildinfo\"",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"**/*.{ts,js,mjs,cjs,json,md,yml,yaml}\"",
    "bench": "npm run build && node benchmarks/bench.mjs",
    "release": "standard-version",
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "preversion": "npm run lint && npm run test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nyigoro/EchoKit.git"
  },
  "keywords": [
    "text",
    "string",
    "utilities",
    "text-manipulation",
    "sanitization",
    "parsing",
    "mentions",
    "hashtags",
    "email",
    "url",
    "validation",
    "cli",
    "seo",
    "templates",
    "pii",
    "diff",
    "similarity",
    "case-conversion",
    "cdn",
    "readability",
    "llm",
    "prompt-hygiene",
    "slugify",
    "truncate",
    "reading-time",
    "analysis",
    "format",
    "typescript",
    "esm"
  ],
  "author": "nyigoro",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/nyigoro/EchoKit/issues"
  },
  "homepage": "https://github.com/nyigoro/EchoKit#readme",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.25.11",
    "jest": "^29.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.9.3"
  }
}
